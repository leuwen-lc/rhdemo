{
  "dashboard": {
    "id": null,
    "uid": "rhdemo-postgresql",
    "title": "rhDemo - Métriques PostgreSQL",
    "description": "Dashboard PostgreSQL pour rhDemo - Métriques collecteurs intégrés postgres_exporter (connexions, verrous, tables, cache)",
    "tags": ["rhdemo", "postgresql", "database", "stagingkub"],
    "timezone": "browser",
    "schemaVersion": 39,
    "version": 2,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "selected": true,
            "text": "Prometheus",
            "value": "prometheus"
          },
          "hide": 0
        }
      ]
    },
    "annotations": {
      "list": []
    },
    "panels": [
      {
        "id": 1,
        "title": "Vue d'ensemble PostgreSQL",
        "type": "row",
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
        "collapsed": false
      },
      {
        "id": 2,
        "title": "Taille Base de Données",
        "type": "stat",
        "gridPos": { "h": 4, "w": 4, "x": 0, "y": 1 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 500000000 },
                { "color": "red", "value": 1000000000 }
              ]
            }
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          }
        },
        "targets": [
          {
            "expr": "pg_database_size_bytes{datname=\"rhdemo\"}",
            "legendFormat": "Size"
          }
        ]
      },
      {
        "id": 3,
        "title": "Connexions Actives",
        "type": "stat",
        "gridPos": { "h": 4, "w": 4, "x": 4, "y": 1 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 50 },
                { "color": "red", "value": 100 }
              ]
            }
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "targets": [
          {
            "expr": "sum(pg_stat_activity_count{datname=\"rhdemo\", state=\"active\"})",
            "legendFormat": "Active"
          }
        ]
      },
      {
        "id": 4,
        "title": "Connexions Idle",
        "type": "stat",
        "gridPos": { "h": 4, "w": 4, "x": 8, "y": 1 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 20 },
                { "color": "red", "value": 50 }
              ]
            }
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "targets": [
          {
            "expr": "sum(pg_stat_activity_count{datname=\"rhdemo\", state=\"idle\"})",
            "legendFormat": "Idle"
          }
        ]
      },
      {
        "id": 5,
        "title": "Verrous Actifs",
        "type": "stat",
        "gridPos": { "h": 4, "w": 4, "x": 12, "y": 1 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 10 },
                { "color": "red", "value": 50 }
              ]
            }
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "targets": [
          {
            "expr": "sum(pg_locks_count{datname=\"rhdemo\"})",
            "legendFormat": "Locks"
          }
        ]
      },
      {
        "id": 6,
        "title": "Dead Tuples",
        "type": "stat",
        "gridPos": { "h": 4, "w": 4, "x": 16, "y": 1 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 1000 },
                { "color": "red", "value": 10000 }
              ]
            }
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "targets": [
          {
            "expr": "sum(pg_stat_user_tables_n_dead_tup{datname=\"rhdemo\"})",
            "legendFormat": "Dead Tuples"
          }
        ]
      },
      {
        "id": 7,
        "title": "Transactions Longues",
        "type": "stat",
        "gridPos": { "h": 4, "w": 4, "x": 20, "y": 1 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 1 },
                { "color": "red", "value": 5 }
              ]
            }
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "targets": [
          {
            "expr": "pg_long_running_transactions or vector(0)",
            "legendFormat": "Long Running"
          }
        ]
      },
      {
        "id": 10,
        "title": "Statistiques des Requêtes (pg_stat_statements)",
        "type": "row",
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
        "collapsed": false
      },
      {
        "id": 11,
        "title": "Top 10 - Temps Total d'Exécution",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 6 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["last", "max"]
          }
        },
        "targets": [
          {
            "expr": "topk(10, pg_stat_statements_seconds_total{datname=\"rhdemo\"})",
            "legendFormat": "queryid={{queryid}}"
          }
        ]
      },
      {
        "id": 20,
        "title": "Statistiques des Requêtes",
        "type": "row",
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
        "collapsed": false
      },
      {
        "id": 21,
        "title": "Temps Moyen par Requête (Top 10)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 15 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["mean", "max"]
          }
        },
        "targets": [
          {
            "expr": "topk(10, pg_stat_statements_seconds_total{datname=\"rhdemo\"} / pg_stat_statements_calls_total{datname=\"rhdemo\"} > 0)",
            "legendFormat": "queryid={{queryid}}"
          }
        ]
      },
      {
        "id": 22,
        "title": "Nombre d'Appels par Requête (Top 10)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 15 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["last"]
          }
        },
        "targets": [
          {
            "expr": "topk(10, rate(pg_stat_statements_calls_total{datname=\"rhdemo\"}[5m]))",
            "legendFormat": "queryid={{queryid}}"
          }
        ]
      },
      {
        "id": 23,
        "title": "Lignes Retournées par Requête (Top 10)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 23 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["last"]
          }
        },
        "targets": [
          {
            "expr": "topk(10, rate(pg_stat_statements_rows_total{datname=\"rhdemo\"}[5m]))",
            "legendFormat": "queryid={{queryid}}"
          }
        ]
      },
      {
        "id": 30,
        "title": "Connexions & Activité",
        "type": "row",
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 31 },
        "collapsed": false
      },
      {
        "id": 31,
        "title": "Connexions par État",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 32 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20,
              "stacking": { "mode": "normal" }
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["last"]
          }
        },
        "targets": [
          {
            "expr": "pg_stat_activity_count{datname=\"rhdemo\"}",
            "legendFormat": "{{state}}"
          }
        ]
      },
      {
        "id": 32,
        "title": "Verrous par Mode",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 32 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "bars",
              "fillOpacity": 80,
              "stacking": { "mode": "normal" }
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["last"]
          }
        },
        "targets": [
          {
            "expr": "pg_locks_count{datname=\"rhdemo\"}",
            "legendFormat": "{{mode}}"
          }
        ]
      },
      {
        "id": 40,
        "title": "Statistiques Tables",
        "type": "row",
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 40 },
        "collapsed": false
      },
      {
        "id": 41,
        "title": "Opérations par Table",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 41 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["mean"]
          }
        },
        "targets": [
          {
            "expr": "rate(pg_stat_user_tables_n_tup_ins{datname=\"rhdemo\"}[5m])",
            "legendFormat": "{{relname}} - INSERT"
          },
          {
            "expr": "rate(pg_stat_user_tables_n_tup_upd{datname=\"rhdemo\"}[5m])",
            "legendFormat": "{{relname}} - UPDATE"
          },
          {
            "expr": "rate(pg_stat_user_tables_n_tup_del{datname=\"rhdemo\"}[5m])",
            "legendFormat": "{{relname}} - DELETE"
          }
        ]
      },
      {
        "id": 42,
        "title": "Scans: Sequential vs Index",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 41 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["mean"]
          }
        },
        "targets": [
          {
            "expr": "rate(pg_stat_user_tables_seq_scan{datname=\"rhdemo\"}[5m])",
            "legendFormat": "{{relname}} - Seq Scan"
          },
          {
            "expr": "rate(pg_stat_user_tables_idx_scan{datname=\"rhdemo\"}[5m])",
            "legendFormat": "{{relname}} - Index Scan"
          }
        ]
      },
      {
        "id": 43,
        "title": "Live vs Dead Tuples",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 49 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["last"]
          }
        },
        "targets": [
          {
            "expr": "pg_stat_user_tables_n_live_tup{datname=\"rhdemo\"}",
            "legendFormat": "{{relname}} - Live"
          },
          {
            "expr": "pg_stat_user_tables_n_dead_tup{datname=\"rhdemo\"}",
            "legendFormat": "{{relname}} - Dead"
          }
        ]
      },
      {
        "id": 44,
        "title": "Taille Bases de Données",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 49 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20,
              "gradientMode": "scheme"
            },
            "color": { "mode": "palette-classic" }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["last"]
          }
        },
        "targets": [
          {
            "expr": "pg_database_size_bytes{datname=~\"rhdemo|postgres\"}",
            "legendFormat": "{{datname}}"
          }
        ]
      },
      {
        "id": 50,
        "title": "Cache & I/O",
        "type": "row",
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 57 },
        "collapsed": false
      },
      {
        "id": 51,
        "title": "Cache Hit Ratio",
        "type": "gauge",
        "gridPos": { "h": 6, "w": 8, "x": 0, "y": 58 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 0.9 },
                { "color": "green", "value": 0.95 }
              ]
            }
          }
        },
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "targets": [
          {
            "expr": "pg_stat_database_blks_hit{datname=\"rhdemo\"} / (pg_stat_database_blks_hit{datname=\"rhdemo\"} + pg_stat_database_blks_read{datname=\"rhdemo\"} + 1)",
            "legendFormat": "Cache Hit Ratio"
          }
        ]
      },
      {
        "id": 52,
        "title": "Blocks Hit vs Read",
        "type": "timeseries",
        "gridPos": { "h": 6, "w": 16, "x": 8, "y": 58 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "calcs": ["mean", "last"]
          }
        },
        "targets": [
          {
            "expr": "rate(pg_stat_database_blks_hit{datname=\"rhdemo\"}[5m])",
            "legendFormat": "Cache Hits/s"
          },
          {
            "expr": "rate(pg_stat_database_blks_read{datname=\"rhdemo\"}[5m])",
            "legendFormat": "Disk Reads/s"
          }
        ]
      }
    ]
  },
  "overwrite": true
}
