                            echo "export PROD_SERVER=$(yq eval '.rhdemo.servers.production' ${SECRETS_DECRYPTED})" >> secrets/env-vars.sh
                        fi
                        
                        # Afficher (sans montrer les valeurs)
                        echo "âœ… Variables d'environnement prÃ©parÃ©es"
                    '''
                }
